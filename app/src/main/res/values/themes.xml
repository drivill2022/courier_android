<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Drivil" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/white_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/backround_spinner</item>
        <item name="android:textSize">@dimen/hintText</item>
    </style>

    <style name="Theme_Date" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/backround_date</item>
        <item name="android:textSize">@dimen/hintText</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/theme_background_button</item>
        <item name="android:textSize">@dimen/hintText</item>
    </style>

    <style name="NotificationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">@color/theme_color</item>
    </style>

    <style name="dashboardTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/theme_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="activityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">@color/white_light</item>
        <item name="colorAccent">@color/theme_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="RadioBtnStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="buttonTint">@color/black</item>
    </style>

    <style name="checkboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="buttonTint">@color/theme_color</item>
    </style>

    <style name="textStyleBold" parent="Widget.AppCompat.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/largeText</item>
    </style>

    <style name="textStyleMedium" parent="Widget.AppCompat.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="textStyleRegular" parent="Widget.AppCompat.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="toolbarTheme" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/montserrat_medium</item>>
        <item name="android:textSize">0sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="bottomBarTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/hintText</item>

    </style>


    <style name="customBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomDatePickerStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:textColorPrimary">@color/theme_color</item>
        <item name="colorControlActivated">@color/theme_color</item>
        <item name="android:selectableItemBackgroundBorderless">@color/theme_color</item>
        <item name="colorControlHighlight">#d50000</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>