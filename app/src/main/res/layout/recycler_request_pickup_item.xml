<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentViewRL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@drawable/backround_gray"
    android:padding="@dimen/_5sdp">


    <TextView
        android:id="@+id/deliverToTxt"
        style="@style/textStyleRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_txt"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:text="@string/deliver_to"
        android:textColor="@color/black"
        android:textSize="@dimen/nameText" />

    <TextView
        android:id="@+id/deliveryAddressTxt"
        style="@style/textStyleRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deliverToTxt"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_toStartOf="@+id/frwd_arrowImg"
        android:drawableStart="@drawable/location_icon"
        android:drawablePadding="@dimen/_5sdp"
        android:text="6467 Football blvd,Los Angeles"
        android:textColor="@color/black"
        android:textSize="@dimen/nameText" />

    <TextView
        android:id="@+id/id_txt"
        style="@style/textStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:text="ID: DC32565621"
        android:textColor="@color/black"
        android:textSize="@dimen/nameText" />


    <ImageView
        android:id="@+id/frwd_arrowImg"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_8sdp"
        android:rotation="180"
        android:src="@drawable/forword_arrow"
        app:tint="@color/black" />


</RelativeLayout>