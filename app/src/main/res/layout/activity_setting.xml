<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.drivill.courier.activity.SettingActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".activity.notificationActivity.NotificationActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white_light"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/forword_arrow" />


            <TextView
                android:id="@+id/titleTxt"
                style="@style/textStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:textSize="@dimen/toolbarTitle" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addressLL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="@dimen/_15sdp">

            <TextView
                android:id="@+id/address"
                style="@style/textStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@string/address"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/hintText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addressTxt2"
                style="@style/textStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/nameText"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:rotation="180"
                android:src="@drawable/forword_arrow"
                android:visibility="invisible"
                app:tint="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gary" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/emergencyLL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/emergencyTxt"
                style="@style/textStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@string/emergency_mobile_number"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/hintText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mobileTxt"
                style="@style/textStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emergencyTxt"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/nameText"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:rotation="180"
                android:src="@drawable/forword_arrow"
                android:visibility="invisible"
                app:tint="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gary" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/payMethodLL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone">

            <TextView
                android:id="@+id/paymentTxt"
                style="@style/textStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@string/payment_method"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/hintText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paymethodTxt"
                style="@style/textStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paymentTxt"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="Cash"
                android:textColor="@color/black"
                android:textSize="@dimen/nameText"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:rotation="180"
                android:src="@drawable/forword_arrow"
                android:visibility="invisible"
                app:tint="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gary" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/recivTxt"
                style="@style/textStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@string/receive_notifications"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/hintText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enable_notification_txt"
                style="@style/textStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@string/disable"
                android:textColor="@color/black"
                android:textSize="@dimen/nameText"
                android:textStyle="bold" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gary" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="@dimen/_15sdp">

            <TextView
                android:id="@+id/camTxt"
                style="@style/textStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@string/camera_access"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/hintText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enable_cam_txt"
                style="@style/textStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@string/disable"
                android:textColor="@color/black"
                android:textSize="@dimen/nameText"
                android:textStyle="bold" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switc_cam_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gary" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="@dimen/_15sdp">

            <TextView
                android:id="@+id/locationTxt"
                style="@style/textStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@string/location"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/hintText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enable_location_txt"
                style="@style/textStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@string/disable"

                android:textColor="@color/black"
                android:textSize="@dimen/nameText"
                android:textStyle="bold" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gary" />

        </RelativeLayout>


        <TextView
            android:id="@+id/AddBAnkDetails"
            style="@style/textStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_bank_details"
            android:gravity="center"
            android:layout_gravity="end"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/nameTexth"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="gone"
            app:drawableTopCompat="@drawable/add_new_icon" />

    </LinearLayout>
</layout>