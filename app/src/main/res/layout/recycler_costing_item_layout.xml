<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@android:color/transparent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/backround_top_corner"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                style="@style/textStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/cost"
                android:textAllCaps="true"
                android:textSize="@dimen/inputText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/gary" />

            <RelativeLayout
                android:id="@+id/deliveryCostRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/theme_background_button"
                android:padding="@dimen/_5sdp">


                <TextView
                    android:id="@+id/deliveryCostTxt"
                    style="@style/textStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="@string/delivery_cost"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/nameText" />

                <TextView
                    style="@style/textStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="TK.326.00"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/nameText" />

                <TextView
                    android:id="@+id/delivery_hour_txt"
                    style="@style/textStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deliveryCostTxt"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="@string/_2_2_30_hours"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/hintText" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/expressCostRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/backround_input"
                android:padding="@dimen/_5sdp">


                <TextView
                    android:id="@+id/expressCostTxt"
                    style="@style/textStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="@string/express_delivery"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/nameText" />

                <TextView
                    style="@style/textStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="TK.326.00"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/nameText" />

                <TextView
                    android:id="@+id/express_hour_txt"
                    style="@style/textStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/expressCostTxt"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="@string/_2_2_30_hours"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/hintText" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/bottomLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center_vertical|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/button_backHome"
                    style="@style/textStyleMedium"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/backround_input"
                    android:gravity="center"
                    android:text="@string/back_to_home"
                    android:textColor="@color/black"
                    android:textSize="@dimen/buttonTextSmall" />

                <TextView
                    android:id="@+id/processPickup"
                    style="@style/textStyleMedium"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/theme_background_button"
                    android:gravity="center"
                    android:text="@string/process_to_pickup"
                    android:textColor="@color/white"
                    android:textSize="@dimen/buttonTextSmall" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/cancel_icon_red" />
    </RelativeLayout>


</layout>