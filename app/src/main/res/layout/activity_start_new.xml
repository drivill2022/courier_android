<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/rl_top"
        >

        <ImageView
            android:id="@+id/iv_dash"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/ic_building"
            android:visibility="visible"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/_50sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rl_bottom"
            />






        <LinearLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/light_gray"
            android:orientation="vertical"
            android:layout_marginTop="-20dp"
            android:background="@drawable/backround_top_corner_40dp"
            android:paddingVertical="@dimen/_20sdp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/ic_driv"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:id="@+id/tv_all"
                        style="@style/monsterratSemiBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_deliver"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:gravity="center"
                        android:text="All In One App"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_17sdp" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_courier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:background="@color/black"
                        app:cardCornerRadius="15dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_12sdp"
                            >

                            <ImageView
                                android:id="@+id/logo"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_15sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/drivillogo" />

                            <TextView
                                android:id="@+id/tv_title"
                                style="@style/monsterratSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/logo"
                                android:text="Drivill Courier"
                                android:textColor="@color/blue3"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_title"
                                android:gravity="left"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toRightOf="@+id/logo"
                                android:text="Lorem ipsum dolor sit amet,\n consectetur adipiscing elit."
                                android:textColor="@color/grey"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/ic_arrow_right"
                                android:layout_centerVertical="true"
                                app:tint="@color/blue3" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_films"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/black"
                        app:cardCornerRadius="15dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_12sdp"
                            >

                            <ImageView
                                android:id="@+id/logo1"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_15sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_films" />

                            <TextView
                                android:id="@+id/tv_title1"
                                style="@style/monsterratSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/logo1"
                                android:text="Drivill Films"
                                android:textColor="@color/blue3"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_title1"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="left"

                                android:layout_toRightOf="@+id/logo1"
                                android:text="Lorem ipsum dolor sit amet,\n consectetur adipiscing elit."
                                android:textColor="@color/grey"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/ic_arrow_right"
                                android:layout_centerVertical="true"
                                app:tint="@color/blue3" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/tv_Select"
                        style="@style/montserrat_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_deliver"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:gravity="center"
                        android:text="Drivill Network Bangladesh"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />





                </LinearLayout>

            </ScrollView>
        </LinearLayout>




    </LinearLayout>
</layout>