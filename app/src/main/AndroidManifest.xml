            android:name=".activity.LetsStartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.notificationActivity.NotificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/dashboardTheme" />
        <activity
            android:name=".activity.ResetPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NotificationTheme" />
        <activity
            android:name=".activity.SignUp3Activity"
            android:screenOrientation="portrait"
            android:theme="@style/NotificationTheme" />
        <activity
            android:name=".activity.SignUpActivity2"
            android:screenOrientation="portrait"
            android:theme="@style/NotificationTheme" />
